              .li John Williams
              .li John Thornburg
              .li Guy Higashi
              .li Greg Scheer
              .li Eric Herron
              .li Debra Avery
              .li Clay Schmit
              .li Chip Andrus
              .li Brian Paulson
              .li Brad Andrews
              .li Bob Keeley
              .li Andrew Donaldson
        .column.col-2-of-3
          block col2
        .column.col-3-of-3
          section.categories
            h4.title Categories
            .container
              each cat in Object.keys(collections).filter(key => !['all', 'post', 'doublePagination'].includes(key)).sort()
                a(href=`/worship_helps/${cat}/`).link #{cat}
          section.archives
            h4.title archives
            .container 

